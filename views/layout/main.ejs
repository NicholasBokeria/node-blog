<div class="main">
    <div class="articles">
        <article>
            <h3>Nodejs is Great!</h3>

            <p>Node.js is an open-source, cross-platform JavaScript run-time environment that executes JavaScript code
                outside of a browser</p>
        </article>
    </div>

    <div class="sidebar">
        <% if(!user.login) { %>
        <div class="switch-forms">
            <h3 class="signup-switch">Sign up</h3>
            <h3 class="signin-switch">Sign in</h3>
        </div>
        <form method="post" class="signup">
            <label for="email">E-mail</label>
            <input type="text" name="email">
            <label for="login">Login</label>
            <input type="text" name="login">
            <label for="password">Password</label>
            <input type="password" name="password">
            <label for="password">Repeat Password</label>
            <input type="password" name="repeat-password">

            <button id="register">Sign up</button>
        </form>

        <form class="signin">
            <label for="email">E-mail</label>
            <input type="text" name="auth-email">
            <label for="password">Password</label>
            <input type="password" name="auth-password">

            <button id="authorisation">Sign in</button>
        </form>
        <% } else { %>
        <div class="user">
            <p> <%= user.login %> </p>
            <a href="/api/auth/logout">Log out</a>
        </div>
        <% } %>
    </div>
</div>